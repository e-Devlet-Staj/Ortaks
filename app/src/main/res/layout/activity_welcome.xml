<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="183dp"
        android:layout_height="65dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/anton"
        android:text="@string/ho_geld_n_z"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="102dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/anton"
        android:text="HEMEN ŞİMDİ KATILIN, TAKSİYE ORTAK BİNİN,
        DAHA AZ ÖDEYİN"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="95dp"
        android:fontFamily="@font/anton"
        android:text="Gideceğiniz yeri işaretleyin ve aynı yere gidecek ortaklarınızla yolculuğun keyfini çıkarın"
        android:textAlignment="center"
        android:textColor="@color/colorYellow"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Üye değil misin ?"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="30dp"
        android:text="Kaydol"
        android:textColor="@color/colorYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <Button
        android:id="@+id/button"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/button"
        android:fontFamily="@font/anton"
        android:text="Giriş Yap"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>